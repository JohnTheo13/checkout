{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./source",
    "paths": {
      "~*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [ "**/*.ts", "**/*.tsx"],
  "exclude": [
    "./node_modules/*",
    "jest.config.js",
    "__mocks__"
  ]
}